{
  "name": "changelog-github-custom",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sapientpants/changelog-github-custom.git"
  },
  "type": "module",
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "tsc --watch --preserveWatchOutput",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run --reporter=verbose",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:workflows": "./scripts/actionlint.sh",
    "lint:markdown": "markdownlint-cli2 \"**/*.md\" \"#node_modules\"",
    "lint:yaml": "yamllint '**/*.{yml,yaml}' --ignore='node_modules/**' --ignore='.github/workflows/**' --ignore='pnpm-lock.yaml'",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:audit:critical": "pnpm audit --audit-level critical",
    "security:osv": "osv-detector --lockfile=pnpm-lock.yaml",
    "update": "pnpm update --latest",
    "update:dependencies": "pnpm update",
    "update:npm": "pnpm update --latest",
    "changeset": "changeset",
    "changeset:version": "changeset version && pnpm install --no-frozen-lockfile",
    "changeset:publish": "changeset publish",
    "build:docker": "docker build . -t changelog-github-custom:latest",
    "scan:docker": "./scripts/scan-container.sh",
    "verify": "pnpm audit --audit-level critical && pnpm typecheck && pnpm lint && pnpm lint:workflows && pnpm lint:markdown && pnpm lint:yaml && pnpm format && pnpm test",
    "verify:full": "pnpm run verify && pnpm run test:coverage",
    "verify:ci": "pnpm run verify && pnpm run security:audit && pnpm run test:coverage",
    "ci": "./scripts/ci-local.sh",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build && pnpm run verify",
    "precommit": "pnpm audit --audit-level critical && pnpm typecheck && pnpm lint && pnpm lint:workflows && pnpm lint:markdown && pnpm lint:yaml && pnpm format && pnpm test"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/changelog-custom.js",
  "module": "./dist/changelog-custom.js",
  "types": "./dist/changelog-custom.d.ts",
  "exports": {
    ".": {
      "types": "./dist/changelog-custom.d.ts",
      "import": "./dist/changelog-custom.js"
    }
  },
  "dependencies": {
    "@changesets/cli": "^2.28.1",
    "@changesets/get-release-plan": "^4.0.6",
    "@changesets/types": "^6.0.0",
    "@sindresorhus/execa": "^9.5.3",
    "dotenv": "^16.4.7",
    "ora": "^8.1.1",
    "picocolors": "^1.1.1",
    "pino": "^9.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.2",
    "@commitlint/config-conventional": "^19.7.2",
    "@types/node": "^22.13.1",
    "@types/ora": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^57.1.0",
    "globals": "^15.14.0",
    "husky": "^9.1.9",
    "markdownlint-cli2": "^0.18.1",
    "osv-detector": "^2.1.2",
    "pino-pretty": "13.1.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vite": "7.1.5",
    "vitest": "^3.2.4",
    "yaml-lint": "1.7.0"
  }
}